<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Table</title>
  </head>

  <body>
    <div>
      <div class="bg-danger" style="width: 100%; padding: 2%">
        <div class="bg-danger" style="padding: 0 0 2%">
          <a class="link-dark" href="/cast"> Voltar para cadastro </a>
        </div>
        <h1>Cast & Crew</h1>
        <button type="button" class="btn btn-dark">
          <a class="link-danger" href="/totalcast"> Formato JSON </a>
        </button>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-dark align-middle table-striped">
        <thead>
          <tr class="border border-5 border-danger">
            <th scope="col">ID</th>
            <th scope="col">Diretor</th>
            <th scope="col">Elenco</th>
            <th scope="col">Roteiro</th>
            <th scope="col">Produtores</th>
            <th scope="col">Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% item.forEach (function(item){%>
          <tr class="border border-5 border-danger">
            <td><%- item._id %></td>
            <td><%- item.director %></td>
            <td><%- item.cast %></td>
            <td><%- item.writer %></td>
            <td><%- item.producers %></td>
            <td>
              <button type="button" class="btn btn btn-danger">
                <a class="link-dark" href="/tablecast/<%- item._id %>?_method=DELETE">
                  Excluir
                </a>
              </button>
            </td>
          </tr>

          <%})%>
        </tbody>
      </table>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>

  <script>
    const url = "/<%- item._id %>";

    $.ajax({
      method: "DELETE",
      url: url,
      success: function (data) {
        console.log(data);
      },

      error: function (data) {
        console.error(data);
      },
    });
  </script>
</html>
